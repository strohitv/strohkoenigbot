root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
tab_width = 4
insert_final_newline = true
max_line_length = 150

[*.sh]
end_of_line = lf

[*.java]
max_line_length = 120

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
